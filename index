<body>

<div class="container">
    <div class="form-card">
        <div class="header">
            <h2>U+우리가게패키지 재약정신청서</h2>
            <p class="text-muted small mb-0">안전하고 신속한 재약정 처리를 위해 내용을 입력해주세요.</p>
        </div>

        <div class="section-title">가입자 정보 확인</div>
        <div class="mb-3">
            <label class="form-label">고객명</label>
            <input type="text" id="custName" class="form-control bg-readonly" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">사업자등록번호*</label>
            <input type="tel" id="bizNum" class="form-control" placeholder="000-00-00000" inputmode="numeric">
        </div>
        <div class="mb-3">
            <label class="form-label">생년월일*</label>
            <input type="tel" id="bizReg" class="form-control" placeholder="생년월일 6자리 (예: 880101)" inputmode="numeric">
        </div>
        <div class="mb-3">
            <label class="form-label">설치 주소*</label>
            <input type="text" id="custAddr" class="form-control mb-2 bg-white" readonly onclick="execDaumPostcode()" placeholder="주소 검색 (여기를 터치)">
            <input type="text" id="custDetail" class="form-control" placeholder="나머지 상세 주소를 입력해 주세요">
        </div>

        <div class="section-title">사은품 지급 정보</div>
        <div class="mb-3">
            <label class="form-label">사은금액</label>
            <input type="text" id="giftAmount" class="form-control bg-readonly" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">지급 계좌번호*</label>
            <input type="text" id="bankAccount" class="form-control" placeholder="은행명 / 계좌번호 / 예금주명">
        </div>

        <div class="section-title">신청인 확인 서명</div>
        <div class="signature-wrapper">
            <div id="sig-placeholder">여기에 정자로 서명해 주세요</div>
            <canvas id="signature-pad"></canvas>
        </div>
        <div class="text-end mt-2">
            <button type="button" class="btn btn-sm btn-outline-secondary border-0" onclick="clearSignature()">서명 다시하기</button>
        </div>

        <button type="button" class="btn-submit" id="submitBtn" onclick="submitData()">재약정 신청 완료하기</button>
    </div>
</div>

<script>
    let signaturePad;
    // 사장님의 재약정용 GAS 웹앱 배포 URL을 여기에 넣어주세요
    const gasUrl = "여기에_새로운_재약정_GAS_URL을_입력하세요"; 

    window.addEventListener('DOMContentLoaded', () => {
        // URL 파라미터에서 데이터 가져오기
        const params = new URLSearchParams(window.location.search);
        const name = params.get('name');
        const bill = params.get('bill');
        const gift = params.get('gift'); // 사은금액 파라미터 추가
        
        if (name) document.getElementById('custName').value = decodeURIComponent(name);
        if (gift) document.getElementById('giftAmount').value = decodeURIComponent(gift) + " 원";
        window.billNumber = bill;

        // 서명 패드 초기화
        const canvas = document.getElementById('signature-pad');
        const placeholder = document.getElementById('sig-placeholder');
        signaturePad = new SignaturePad(canvas, {
            penColor: 'rgb(0, 0, 0)',
            minWidth: 2,
            maxWidth: 4
        });

        const hidePlaceholder = () => { placeholder.style.display = 'none'; };
        canvas.addEventListener('mousedown', hidePlaceholder);
        canvas.addEventListener('touchstart', hidePlaceholder);

        // 캔버스 크기 최적화
        resizeCanvas();
    });

    function execDaumPostcode() {
        new daum.Postcode({
            oncomplete: function(data) {
                document.getElementById('custAddr').value = data.roadAddress;
                document.getElementById('custDetail').focus();
            }
        }).open();
    }

    function clearSignature() {
        signaturePad.clear();
        document.getElementById('sig-placeholder').style.display = 'block';
    }

    function resizeCanvas() {
        const canvas = document.getElementById('signature-pad');
        const ratio = Math.max(window.devicePixelRatio || 1, 1);
        canvas.width = canvas.offsetWidth * ratio;
        canvas.height = canvas.offsetHeight * ratio;
        canvas.getContext("2d").scale(ratio, ratio);
    }

    function submitData() {
        const btn = document.getElementById('submitBtn');
        const data = {
            billNumber: window.billNumber,
            custName: document.getElementById('custName').value,
            bizNum: document.getElementById('bizNum').value,
            bizReg: document.getElementById('bizReg').value,
            custAddr: document.getElementById('custAddr').value + " " + document.getElementById('custDetail').value,
            bankAccount: document.getElementById('bankAccount').value,
            giftAmount: document.getElementById('giftAmount').value,
            signature: signaturePad.toDataURL()
        };

        // 필수값 체크
        if(!data.bizNum || !data.bizReg || !document.getElementById('custAddr').value || !data.bankAccount || signaturePad.isEmpty()) {
            alert("입력되지 않은 필수 항목(*)이 있습니다.\n모든 정보를 입력하고 서명을 완료해 주세요.");
            return;
        }

        btn.disabled = true;
        btn.innerText = "신청서 제출 중...";

        fetch(gasUrl, { 
            method: 'POST', 
            mode: 'no-cors', // GAS 특성에 맞게 설정
            body: JSON.stringify(data) 
        })
        .then(() => {
            // 성공 시 알림 및 이동
            alert("재약정 신청서가 성공적으로 제출되었습니다!");
            // 사장님의 깃허브 view.html 주소로 연결 (bill 파라미터 포함)
            location.href = "view.html?bill=" + data.billNumber;
        })
        .catch(err => {
            alert("제출 도중 오류가 발생했습니다. 다시 시도해 주세요.");
            btn.disabled = false;
            btn.innerText = "재약정 신청 완료하기";
        });
    }
</script>
</body>
</html>
